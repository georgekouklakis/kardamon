{
    "name": "kardamon",
    "version": "0.0.1",
    "description": "a card game engine",
    "main": "index.js",
    "scripts": {
        "start": "parcel src/index.html -p 8000",
        "build": "parcel build src/index.html --out-dir dist",
        "release": "standard-version",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/georgekouklakis/kardamon.git"
    },
    "author": "georgekouklakis",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/georgekouklakis/kardamon/issues"
    },
    "homepage": "https://github.com/georgekouklakis/kardamon",
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "eslint": "^6.8.0",
        "husky": "^4.2.5",
        "minimist": ">=1.2.2",
        "parcel-plugin-clean-easy": "^1.0.2",
        "parcel-plugin-static-files-copy": "^2.2.1",
        "prettier-eslint": "^9.0.1",
        "standard-version": "^8.0.1"
    },
    "dependencies": {
        "phaser": "^3.55.2"
    },
    "parcelCleanPaths": [
        "dist"
    ],
    "staticFiles": {
        "staticPath": "public",
        "watcherGlob": "**"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "subject-case": [
                2,
                "never",
                [
                    "start-case",
                    "pascal-case"
                ]
            ]
        }
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "extends": "eslint:recommended",
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "windows"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ],
            "eol-last": [
                "error",
                "always"
            ],
            "comma-dangle": [
                "error",
                "always-multiline"
            ],
            "space-before-function-paren": [
                "error",
                "always"
            ]
        }
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "all"
    }
}
